#!/usr/bin/env python3
"""
Spec-Kit Manager - Entry Point Script

A modular Python wrapper for GitHub Spec Kit with enhanced functionality.
"""

import sys
import os
from pathlib import Path

# Add the speckit_manager package to Python path
script_dir = Path(__file__).parent
sys.path.insert(0, str(script_dir))

try:
    from speckit_manager.main import main
except ImportError as e:
    print(f"Error importing speckit_manager: {e}")
    print("Please ensure all dependencies are installed:")
    print("  pip install -r requirements.txt")
    sys.exit(1)

if __name__ == '__main__':
    sys.exit(main())