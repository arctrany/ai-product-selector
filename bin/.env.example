# Workflow Engine Environment Variables Configuration
# Copy this file to .env and customize the values as needed

# Server Configuration
WORKFLOW_HOST=0.0.0.0
WORKFLOW_PORT=8889
WORKFLOW_TITLE=Workflow Engine API
WORKFLOW_DESCRIPTION=轻量级本地工作流引擎 API
WORKFLOW_VERSION=1.0.0

# Project Configuration
WORKFLOW_PROJECT_ROOT=
WORKFLOW_SOURCE_DIR=src_new
WORKFLOW_APPS_DIR=apps

# Database Configuration
# Leave empty to use platform-specific default location
WORKFLOW_DB_PATH=

# Logging Configuration
WORKFLOW_LOG_LEVEL=INFO
# Leave empty to use platform-specific default location
WORKFLOW_LOG_DIR=

# Templates Configuration
WORKFLOW_TEMPLATES_DIR=templates

# Development Configuration
WORKFLOW_DEBUG=false
WORKFLOW_RELOAD=true
WORKFLOW_AUTO_RELOAD=true

# Cross-platform Data Directories
# Leave empty to use platform-specific defaults
WORKFLOW_DATA_DIR=~/.ren
WORKFLOW_CACHE_DIR=
WORKFLOW_TEMP_DIR=~

# Performance Configuration
WORKFLOW_THREAD_WORKERS=4
WORKFLOW_BATCH_SIZE=100
WORKFLOW_QUERY_TIMEOUT=30

# Security Configuration
WORKFLOW_VALIDATE_INPUTS=true
WORKFLOW_MAX_DEPTH=100
WORKFLOW_MAX_EXECUTION_TIME=3600

# Feature Flags
WORKFLOW_ENABLE_ASYNC=true
WORKFLOW_ENABLE_BATCH=true
WORKFLOW_ENABLE_METRICS=true